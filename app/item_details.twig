<div class="row" style="position: relative;">
	<div class="col-md-4 affix affix-top  sidebar-offcanvas" id="left-area">
		<section id="left-area-content" class="content">
			
			
			<h1>{{ details['name'] }}</h1>
			
			<img alt="" src="/thumbnail/350/350?crop=false&file=/files/{{ details['photo'] }}" style="" class="img-thumbnail" />
			
			
			
			<p style="margin-top:20px; text-align: justify">
			<address>
				<strong>Phone:</strong><br>
				{{ details['phone'] }}
			</address>
				
			
			<address>
				<strong>Website:</strong><br>
				{{ details['website'] }}
			</address>
			
			<address>
				<strong>Address:</strong><br>
				{{ details['address'] }}
			</address>
			{% if details['gps_long']!="" and details['gps_lat']!="" %}
			<address>
				<strong>GPS:</strong><br>
				<em>Lng:</em>
				{{ details['gps_long'] }} &nbsp;&nbsp;&nbsp; <em>Lat:</em>
				{{ details['gps_lat'] }}
			</address>
				{% endif %}
				
				
			</p>
			
			<h4>Categories</h4>
			
			<ul class="nav nav-pills nav-stacked">
				{% for row in categories %}
					<li  data-trigger="hover" data-container="body" data-toggle="popover" data-placement="right" data-content="{% if row['photo'] %}<div class='c'><img src='/thumbnail/200/200?crop=false&file=/categories/{{ row['photo'] }}'  class='img-thumbnail' /></div>{% endif %}<div class='text-justify s'>{{ row['text'] }}</div>" data-html="true"  data-placement="left" title="{{ row['category'] }} ">
						<a href="/list/{{ row['ID'] }}/{{ row['url'] }}">
							
							{{ row['category'] }}
						</a>
					</li>
				{% endfor %}
			</ul>
			
			
		</section>
	</div>
	<div class="col-md-7 col-md-offset-5 row-offcanvas row-offcanvas-left match-height" id="right-area">
		<div data-toggle="offcanvas" class="offcanvas visible-sm-block visible-xs-block">
			<i class="fa fa-ellipsis-v"></i>
		</div>
		<section id="right-area-content-area">
			<section id="right-area-content" class="content">
				<h1 class="">{{ details['name'] }}</h1>
				
				
			
				
				<section id="details-text" >
					{{ details['text']|raw }}
				</section>
				
				
				{% if details['photos']|length %}
				<h4>Photos / Images</h4>
				<section id="details-photos">
					{% for row in details['photos'] %}
					<img alt="" src="/thumbnail/200/200?crop=false&file=/files/{{ row['photo'] }}" style="" class="img-thumbnail" />
					{% endfor %}
				</section>
				{% endif %}
				{% if details['gps_long']!="" and details['gps_lat']!="" %}
				<h4>Location Map</h4>
				<section id="details-map">
					<div id="map-canvas" data-lng="{{ details['gps_long'] }}" data-lat="{{ details['gps_lat'] }}" title="{{ details['name'] }}"></div>
				</section>
				{% endif %}
			</section>
		</section>
	
	</div>

</div>